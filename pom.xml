<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>dk.lmst.ctr</groupId>
    <artifactId>ctr-schemas</artifactId>
    <version>1.1.24</version>
    <name>ctr-schemas</name>
    <description>CTR schemas</description>
    <packaging>pom</packaging>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages</name>
            <url>https://maven.pkg.github.com/trifork/ctr-schemas</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-ctr</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>dk.lmst.ctr</groupId>
                                    <artifactId>ctr-schemas</artifactId>
                                    <version>${project.version}</version>
                                    <classifier>src</classifier>
                                    <type>zip</type>
                                </artifactItem>
                            </artifactItems>
                            <includes>
                                src/wsdl/Ctr2_v1_0_0.wsdl,
                                src/schemas/**,
                            </includes>
                            <outputDirectory>${project.build.directory}/api/ctr-schemas</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>xml-maven-plugin</artifactId>
                <version>1.0.2</version>
                <executions>
                    <execution>
                        <phase>verify</phase>
                        <goals>
                            <goal>transform</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <transformationSets>
                        <transformationSet>
                            <dir>${project.build.directory}/api/ctr-schemas/src/wsdl</dir>
                            <includes>*.wsdl</includes>
                            <stylesheet>src/main/xslt/strip-security-imports.xsl</stylesheet>
                            <addedToClasspath>false</addedToClasspath>
                            <outputDir>${project.build.directory}/api/ctr-schemas/src/wsdl</outputDir>
                        </transformationSet>
                    </transformationSets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.sun.xml.ws</groupId>
                <artifactId>jaxws-maven-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>wsimport</goal>
                        </goals>
                        <phase>verify</phase>
                        <configuration>
                            <vmArgs>
                                <vmArg>-Djavax.xml.accessExternalDTD=all</vmArg>
                            </vmArgs>
                            <encoding>UTF-8</encoding>
                            <xnocompile>true</xnocompile>
                            <extension>true</extension>
                            <keep>true</keep>
                            <wsdlFiles>
                                <wsdlFile>${project.build.directory}/api/ctr-schemas/src/wsdl/Ctr2_v1_0_0.wsdl</wsdlFile>
                            </wsdlFiles>
                            <bindingFiles>
                                <bindingFile>${basedir}/src/main/xjb/jaxb-bindings-wsimport.xjb</bindingFile>
                            </bindingFiles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.7.1</version>
                <executions>
                    <execution>
                        <id>resources</id>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <descriptors>
                                <descriptor>/src/main/assembly/resources.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
